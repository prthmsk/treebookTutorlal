<h2>Sign in</h2>

<div class="row">
<div class="col-md-4">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal", role: "form"}) do |f| %>
	<%= f.input :email, autofocus: true, input_html: {class: "form-control"} %>
	<%= f.input :password, autocomplete: "off", input_html: {class: "form-control"} %>
	
 

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, as: :boolean %><%= f.label :remember_me, class: "checkbox-label" %></div>
  <% end -%>
  <br />
  <div><%= f.button :submit, "Sign in", class: "btn-primary" %></div>
<% end %>
<br /><br />
<%= render "devise/shared/links" %>
</div>
<div class="col-md-8">
</div>
</div>